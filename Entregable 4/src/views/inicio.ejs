<%- include ( './partials/head' ); %>
    <!-- ESTILOS PROPIOS -->        
    <title><%- title %></title>
    <style>
        .card {
            height: 100%;
        }
        .card img {
            max-width: 100%;
            height: auto;
        }
    </style>
   </head>
<body class="container-fluid">
    <%- include ( './partials/header' ); %>
    <h1>INICIO</h1>
    <div class="row">
        <% for (let i = 0; i < productsFind.length; i++) { %>
            <% const product = productsFind[i]; %>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="/img/<%= product.thumbnail%>" alt="Imagen del producto" class="card-img-top">
                    <div class="card-body">
                        <h4 class="card-title">Title: <%= product.title %></h4>
                        <p class="card-text">Disponibilidad: <%= product.stock %></p>
                        <p class="card-text">Price: $<%= product.price %></p>
                    </div>
                </div>
            </div>
           
        <% } %> 
    </div>

    <%- include ( './partials/footer' ); %>
</body>
</html>
